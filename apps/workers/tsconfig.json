{
  "compilerOptions": {
    "esModuleInterop": true, // Enables compatibility with CommonJS modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "target": "ES2022", // Target modern Node.js versions (Node.js 22+ supports ES2022)
    "allowJs": true, // Allow JavaScript files to be compiled (optional)
    "resolveJsonModule": true, // Allow importing JSON files
    "moduleDetection": "force", // Treat files as modules
    "isolatedModules": true, // Ensure files can be safely transpiled individually
    "strict": true, // Enable all strict type-checking options
    "noUncheckedIndexedAccess": true, // Add safety for array/object index access (optional but recommended)
    "module": "NodeNext", // Use Node.js's modern module system (ESM/CommonJS interop)
    "moduleResolution": "NodeNext", // How modules are looked up
    "noEmit": false, // *** IMPORTANT: Set to false to actually compile TS to JS ***
    "outDir": "./dist", // *** Specify output directory for compiled JS ***
    "rootDir": "./src", // *** Specify the root directory of source files ***
    "sourceMap": true, // Generate source maps for debugging
    "inlineSources": true, // Embed source code in source maps
    "baseUrl": ".", // Base directory for path aliases
    "paths": {
      "@/*": ["./src/*"] // Alias for src directory
    },
    "lib": ["ES2022"] // Use appropriate ES version lib for Node.js 22+
  },
  "include": ["src/**/*.ts"], // *** Only include source files ***
  "exclude": ["node_modules", "dist"] // *** Exclude node_modules and output dir ***
}
